#content
  .desktop-one-half.content-center
    form.js-form
      h2.h4.dragon {{model.description}}
      .js-output.output
      .progress-bar.js-progress.dragon Spelling {{model.current}} / {{model.total}} - Mistakes: {{model.mistakes}}

      .field
        .field__answer
          input.control.control--text.js-answer(type='text', name='answer', autocomplete='off', autocorrect='off', autocapitalize='off', spellcheck='off')

      .button-group.centered
        button.button.button--primary(type='submit', autofocus) Submit
        button.button.js-btn-repeat(type='button') Say Again

    .js-end.is-hidden
      .js-no-mistakes.is-hidden
        iframe.bottom-margin(width='100%', height='480', src='', frameborder='0', allowfullscreen)

      .js-mistakes.is-hidden

        img.bottom-margin(src='http://www.findcatnames.com/wp-content/uploads/2014/09/453768-cats-cute.jpg')

      .button-group.centered
        a.button.button--primary(href='/spellings/' + model.get('_id')) Play Again
        a.button(href='/spellings') More Spellings
