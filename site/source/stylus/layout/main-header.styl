//
// MAIN HEADER
// ===========
//


.main-header
  padding $base--spacing 0
  border-bottom 1px solid $color--grey
  background-color $color--primary
  box-shadow inset 0px -7px 25px -8px rgba(0, 0, 0, 0.60)

.site-title
  font-family $base--font-heading
  font-weight 700
  font-size 2em
  margin-bottom 0
  text-transform uppercase
  color white
  &:hover
  &:focus
  &:active
    background-color $color--primary
    color $color--white
    text-decoration none
